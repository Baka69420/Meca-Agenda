@using System.Globalization
@model MecaAgenda.Application.DTOs.AppointmentDTO

@{
    ViewData["Title"] = "Prelimilary Invoice";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillId)
        </dt>
        <dd class="col-sm-10">
            TO BE CREATED
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            <p>@ViewBag.CurrentDate</p>
        </dd>

    </dl>

    <div class="row">
        <div class="col">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.BranchId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.BranchId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Phone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Phone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Address)
                </dd>
            </dl>
        </div>
        <div class="col">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.UserId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.UserId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Phone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Phone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Address)
                </dd>
            </dl>
        </div>
    </div>

    <h4>Services</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Service.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Status)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US")))
                </td>
            </tr>
        </tbody>
    </table>
    <br />

    <dl class="row">
        <dt class="col-sm-2">
            <h4>@Html.DisplayNameFor(model => model.Price)</h4>
        </dt>
        <dd class="col-sm-10">
            <h3>@Html.DisplayFor(model => model.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US")))</h3>
        </dd>
    </dl>

</div>

@using (Html.BeginForm("PrelimilaryInvoice", "Appointment", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.Hidden("id", Model.AppointmentId)
    <button type="submit" class="btn btn-primary">Create Invoice</button>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
}
