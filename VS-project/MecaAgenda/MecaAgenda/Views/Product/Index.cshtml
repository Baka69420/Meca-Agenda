@using System.Globalization
@model IEnumerable<MecaAgenda.Application.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>

<div class="row row-cols-1 row-cols-sm-3 row-cols-md-3 g-4">
    @foreach(var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                @* <img class="card-img-top"
                     style="max-height:460px;"
                     role="img"
                     src="data:image/jpeg;charset=utf-8;base64, @Convert.ToBase64String(item.Imagen)"
                     alt="Imagen" /> *@

                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>
                    <h6 class="card-text">@Html.DisplayFor(modelItem => item.Brand)</h6>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StockQuantity)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => item.StockQuantity)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => item.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US")))
                        </dd>
                    </dl>
                    @Html.ActionLink("More Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>