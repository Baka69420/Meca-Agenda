@model MecaAgenda.Application.DTOs.BillDTO

@{
    ViewData["Title"] = "Bill Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillId)
        </dd>
    </dl>
    <div class="row">
        <div class="col align-items-start">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Phone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Phone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Branch.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch.Email)
                </dd>
            </dl>
        </div>
        <div class="col align-items-start">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Phone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Phone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Client.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client.Email)
                </dd>
            </dl>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Paid == true)
            {
                <p>Fully Paid</p>
            } else
            {
                <p>Not Paid</p>
            }
        </dd>
    </dl>
    <br />
    
    @if (Model.Appointments.Count > 0)
    {
        <h4>Services</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Appointments[0].Service.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Appointments[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Appointments[0].Price)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Appointments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
    
    @if (Model.BillItems.Count > 0)
    {
        <h4>Products</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BillItems[0].Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillItems[0].ProductPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillItems[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillItems[0].Price)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BillItems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
    
    <dl class="row">
        <dt class="col-sm-2">
            <h4>@Html.DisplayNameFor(model => model.TotalAmount)</h4>
        </dt>
        <dd class="col-sm-10">
            <h3>@Html.DisplayFor(model => model.TotalAmount)</h3>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
