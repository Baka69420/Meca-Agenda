@model IEnumerable<MecaAgenda.Application.DTOs.BillDTO>

@{
    ViewData["Title"] = "Bill List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @if (item.Paid)
                {
                    <p>Fully Paid</p>
                }
                else
                {
                    <p>Not Paid</p>
                }
            </td>
            @if (!item.Paid)
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.BillId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Edit", "Edit", new { id = item.BillId }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.BillId }, new { @class = "btn btn-danger" })
                </td>
            } else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.BillId }, new { @class = "btn btn-primary" })
                </td>
            }
        </tr>
}
    </tbody>
</table>
