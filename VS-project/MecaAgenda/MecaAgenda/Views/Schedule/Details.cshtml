@model MecaAgenda.Application.DTOs.BranchDTO

@{
    ViewData["Title"] = "Branch Schedule Details";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BranchId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BranchId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <h4>Schedule</h4>
    <hr />
    @Html.ActionLink("Create Schedule", "CreateSchedule", new { branchId = Model.BranchId })
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BranchSchedules[0].DayOfWeek)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchSchedules[0].OpenTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchSchedules[0].CloseTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BranchSchedules)
            {
                <tr>
                    <td>
                        @switch (item.DayOfWeek)
                        {
                            case (byte)DayOfWeek.Monday:
                                <text>Monday</text>
                                break;
                            case (byte)DayOfWeek.Tuesday:
                                <text>Tuesday</text>
                                break;
                            case (byte)DayOfWeek.Wednesday:
                                <text>Wednesday</text>
                                break;
                            case (byte)DayOfWeek.Thursday:
                                <text>Thursday</text>
                                break;
                            case (byte)DayOfWeek.Friday:
                                <text>Friday</text>
                                break;
                            case (byte)DayOfWeek.Saturday:
                                <text>Saturday</text>
                                break;
                            case (byte)DayOfWeek.Sunday:
                                <text>Sunday</text>
                                break;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CloseTime)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditSchedule", new { id = item.ScheduleId }) |
                        @Html.ActionLink("Delete", "DeleteSchedule", new { id = item.ScheduleId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Schedule Exceptions</h4>
    <hr />
    @Html.ActionLink("Create Exception", "CreateException", new { branchId = Model.BranchId })
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleExceptions[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleExceptions[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleExceptions[0].EndTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ScheduleExceptions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditException", new { id = item.ExceptionId }) |
                        @Html.ActionLink("Delete", "DeleteException", new { id = item.ExceptionId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
